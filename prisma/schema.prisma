datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
}

model Account {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.String
  access_token       String?  @db.String
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.String
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String?
  email             String?  @unique
  emailVerified     DateTime?
  image             String?
  hashedPassword    String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  role Role         @default(USER)
  fcmToken          String?

  accounts          Account[]
  orders            Order[]
  reviews           Review[]
}

model Product {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  description       String
  price             Float
  dmc               Float   @default(0)
  list              Float
  brand             String
  category          String
  inStock           Boolean
  stock             Int     @default(0)
  remainingStock    Int     @default(0)
  isVisible         Boolean @default(true)
  images            Image[]
  reviews           Review[]
}

model Review {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  productId         String  @db.ObjectId
  rating            Int
  comment           String
  createdDate       DateTime  @default(now())

  product Product @relation(fields: [productId], references: [id])
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Order {
  id                String    @id @default(auto()) @map("_id") @db.ObjectId
  userId            String?   @db.ObjectId
  guestEmail        String?
  guestName         String?
  guestToken        String?   @unique
  amount            Float
  totalDmc          Float     @default(0)
  currency          String
  status            String
  deliveryStatus    String
  paymentConfirmed  Boolean   @default(false)
  paymentClaimed    Boolean   @default(false)
  cancelled         Boolean   @default(false)
  cancelledAt       DateTime?
  refundAmount      Float     @default(0)
  reimbursed        Boolean   @default(false)
  reimbursedAt      DateTime?
  createDate        DateTime  @default(now())
  paymentIntentId   String    @unique
  products          CartProductType[]
  address           Address?

  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)
}

type CartProductType {
  id String
  name String
  description String
  category String
  brand String
  selectedImg Image
  quantity Int
  price Float
}

type Image {
  color String
  colorCode String
  image String
}

type Address {
  name    String?
  phone   String?
  address String?
  hostel  String?
}

model Settings {
  id                String    @id @default("settings") @map("_id")
  bankName          String
  bankAccountNumber String
  accountHolderName String
  hostels           String[]  @default([])
  spf               Float     @default(100)
  nextDeliveryTime  DateTime?
  whatsappNumber    String?
  bannerTitle       String?
  bannerSubtitle    String?
  bannerDiscount    String?
  bannerImage       String?
  bannerColors      String[]  @default([])
  bannerVisible     Boolean   @default(true)
  updatedAt         DateTime  @updatedAt
}

model Notification {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  body       String
  read       Boolean  @default(false)
  createdAt  DateTime @default(now())
  orderId    String?  @db.ObjectId
}

model Reimbursement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  createdAt DateTime @default(now())
}

enum Role {
    USER
    ADMIN
    MANAGER
}